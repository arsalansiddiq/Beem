<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout_listItemsMerchant"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_sentMerchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgView_brandImageMerchant"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:layout_margin="15dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtView_nameMerchant"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/record_sent"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtView_priceMerchant"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Price"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtView_stockMerchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Stock"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edtText_priceMerchant"
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:inputType="number"
                android:cursorVisible="false"
                android:background="@drawable/editext_background"
                android:gravity="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtText_stockMerchant"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:cursorVisible="false"
                android:inputType="number"
                android:background="@drawable/editext_background"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>